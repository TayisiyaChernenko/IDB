# Import the required modules
import pymongo

# Set up a connection to the MongoDB database
client = pymongo.MongoClient("mongodb://localhost:xxxxx/")
db = client["discussion_board"]

# Define a function to insert a new post into the database
def add_post(username, title, content):
    posts = db.posts
    post = {"username": username, "title": title, "content": content}
    post_id = posts.insert_one(post).inserted_id
    return post_id

# Define a function to get all posts from the database
def get_all_posts():
    posts = db.posts.find()
    post_list = []
    for post in posts:
        post_list.append(post)
    return post_list

# Define a function to get a single post by its ID
def get_post_by_id(post_id):
    posts = db.posts
    post = posts.find_one({"_id": post_id})
    return post

# Define a function to update a post by its ID
def update_post(post_id, username, title, content):
    posts = db.posts
    new_post = {"username": username, "title": title, "content": content}
    posts.update_one({"_id": post_id}, {"$set": new_post})
    return True

# Define a function to delete a post by its ID
def delete_post(post_id):
    posts = db.posts
    posts.delete_one({"_id": post_id})
    return True
